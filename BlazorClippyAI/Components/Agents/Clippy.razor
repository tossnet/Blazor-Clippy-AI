@namespace BlazorClippyAI.Agents

<div class="clippy-container" id="clippy-container">
    <div class="dialog-box">
        <div class="dialog-content">
            <p>@_answers</p>
        </div>
        <div class="dialog-input">
            <input type="text" 
                   class="input-text" 
                   placeholder="Votre message ici..." 
                   @bind="_message"
				   @bind:event="oninput"
                   @onkeydown="@ValideMessage" />
			 <div class="dialog-action">
                <button class="clippy-button" @onclick="ClippySpeak">📢</button>
                <button class="clippy-button" @onclick="SendMessage">ENTER</button>
            </div> 
        </div>
    </div>
    <img src="assets/clippy.png" alt="Clippy" class="clippy" id="clippy" @onclick="ClippySpeak">
</div>
